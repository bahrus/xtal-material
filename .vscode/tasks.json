{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sass Compile Material",
            "type": "shell",
            "command": "node-sass text-input-md.scss text-input-md.css",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sass Compile Material Checkbox",
            "type": "shell",
            "command": "node-sass checkbox-input-md.scss checkbox-input-md.css",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sass Compile Material Radiobutton",
            "type": "shell",
            "command": "node-sass radio-input-md.scss radio-input-md.css",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}