{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sass Compile Material",
            "type": "shell",
            "command": "node-sass xtal-material.scss xtal-material.css",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Sass Compile Material CheckboxRadioButton",
            "type": "shell",
            "command": "node-sass xtal-material-checkbox-radio.scss xtal-material-checkbox-radio.css",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}